generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  nome String
  email String @unique
  senha String
  adminStatus Boolean @default(false)
  post post[]
}
model post{

id int id@default(autoincrement())
title string
conten string
author user @relation(fields: [author_id], references: [id])
author_id int 

}

model mesa{
  id id@autoincrement
  nome string
  lugares int
  
}